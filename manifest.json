{
  "name": "Q-Viewer Document Viewer",
  "version": "0.0.2.5",
  "description": "Simple markdown viewer to make it is easier and faster to read paragraphs and chapters.",
  "manifest_version": 3,
  "icons": {
    "16": "./images/c16.png",
    "32": "./images/c32.png",
    "128": "./images/c128.png"
  },
  "action": {
    "default_popup": "./index.html",
    "default_icons": {
      "16": "./images/c16.png",
      "32": "./images/c32.png",
      "128": "./images/c128.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*.q-viewer.com/*"],
        "css": ["*.css"],
        "js": ["*.js"]
      }
    ],
    "background": {
      "service_worker": "./background.js"
    },
    "options_page": "options.html",
    "open_in_tab": true,
    "permissions": [
      "storage",
      "scripting"
  ],
  "host_permissions": [
    "file:///*"
  ], 
  "optional_host_permissions": [
    "*://*/"
  ],
  "optional_permissions": [
    "webRequest"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "/js/markdown-it.min.css",
        "/js/markdown-it-plus.min.css"      
      ]
    }
  ]
}
}





