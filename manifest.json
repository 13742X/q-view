{
  "name": "View-Q Document Viewer",
  "version": "0.0.2.3",
  "description": "Simple markdown viewer to make it is easier and faster to read paragraphs and chapters.",
  "manifest_version": 3,
  "icons": {
    "16": "./images/c16.png",
    "32": "./images/c32.png",
    "128": "./images/c128.png"
  },
  "action": {
    "default_popup": "./index.html",
    "default_icons": {
      "16": "./images/c16.png",
      "32": "./images/c32.png",
      "128": "./images/c128.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*.view-q.com/*"],
        "css": ["*.css"],
        "js": ["*.js"]
      }
    ],
    "background": {
      "service_worker": "./background.js"
    },
    "options_page": "options.html",
    "open_in_tab": true,
    "permissions": [
      "unlimitedStorage",
      "storage",
      "clipboardWrite",
      "file:///*/*"
  ] 
  ,
    "host_permissions": [ "https://*/*" ]
  }
}
